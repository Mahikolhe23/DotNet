@using BOL;
@{
    ViewData["Title"] = "Insert Page";
}
<h1>Add Product</h1>
<hr>
<div class="text-center">
    <form action="/Products/postinsert">
        <label for="id">Product ID:</label><br>
        <input type="text" id="id" name="id" value="" required><br>

        <label for="Name">Name:</label><br>
        <input type="text" id="Name" name="name" value="" required><br>

        <label for="Category ">Category :</label><br>
        <input type="text" id="Category" name="Category" value="" required><br>

        <label for="UnitPrice ">UnitPrice :</label><br>
        <input type="UnitPrice " id="UnitPrice" name="UnitPrice" value="" required><br>

        <label for="Date ">EXP Date:</label><br>
        <input type="text" id="Date" name="Date" required><br><br>
        
        <label for="Description  ">Description :</label><br>
        <input type="Description " id="Description " name="Description " required><br><br>

        <input type="submit" value="Submit">
    </form>
</div>